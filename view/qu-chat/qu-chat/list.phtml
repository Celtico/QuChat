<script>

    WChat();

    function WChat(){

        var chatList  = $('.chat-list');

        chatList.find(" a." + $('.chat-pos').attr('data-resource')).css('font-weight','bold');

        chatList.find('a').click(function() {

            chatList.find('a').css('color','');
            $(this).css('color','#333');

            log('click');

            var id       =  $(this).attr('id');
            var resource =  $(this).attr('data-resource');
            var name     =  $(this).attr('data-name');

            chatList.attr('id',id);
            chatList.attr('data-resource',resource);
            chatList.attr('data-name',name);

            return  resource;
        });

        return  chatList.attr('data-resource');
    }

</script>